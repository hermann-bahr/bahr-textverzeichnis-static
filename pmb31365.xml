               <monogr>
                  <author ref="pmb10815">Bahr, Hermann</author>
                  <title level="m" ref="pmb31365">Der liebe Augustin. Pantomime</title>
                  <imprint>
                     <pubPlace>Berlin</pubPlace>
                     <publisher>S. Fischer</publisher>
                     <date when="1902">1902</date>
                  </imprint>
